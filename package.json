{
  "name": "language-server-diagram-tool",
  "version": "0.0.1-placeholder",
  "description": "A tool to export diagrams of programs, read via language servers or LSIF (language server index format)",
  "workspaces": [
    "lsif",
    "lsp"
  ],
  "main": "index.js",
  "type": "module",
  "keywords":  [
    "diagram",
    "language-server",
    "lsp",
    "modeling",
    "reverse-engineering",
    "static-analysis",
    "visualization"
  ],
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "prettify": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:data:export:builderbook": "pushd lsif/__tests__/data ; lsif-tsc --workspaceRoot ./builderbook/builderbook/ --project ./builderbook.tsconfig.json --package ./builderbook/builderbook/package.json --out ./builderbook.lsif.jsonl --typeAcquisition  --noContents ; popd"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@likec4/core": "^0.33.1",
    "@types/node": "^16.18.46",
    "inflection": "^2.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "vscode-languageserver": "~8.1.0",
    "zx": "^7.2.3"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.2",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-plugin-deprecation": "^1.4.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "ts-toolbelt": "^9.6.0"
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
